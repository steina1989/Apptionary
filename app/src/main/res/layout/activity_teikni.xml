<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_teikni"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="is.hi.apptionary.TeikniActivity"
    android:background="#FF001188">

    <TextView
        android:text="Ninja"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:id="@+id/textToGuess"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="463dp"
        android:textStyle="normal|bold"
        android:textAllCaps="false"
        android:textAlignment="center" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="362dp"
            android:layout_height="335dp"
            android:weightSum="1">

            <FrameLayout
                android:layout_width="356dp"
                android:layout_height="410dp"
                android:backgroundTint="@android:color/background_dark"
                android:padding="10dp">

                <view
                    android:layout_width="match_parent"
                    android:layout_height="403dp"
                    class="is.hi.apptionary.PaintView"
                    android:id="@+id/paintingCanvas"
                    android:layout_weight="1"
                    android:background="@android:color/background_light"
                    android:allowUndo="true"
                    android:adjustViewBounds="true"
                    android:saveEnabled="true" />

            </FrameLayout>

        </LinearLayout>

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="11dp">

            <ToggleButton
                android:layout_height="wrap_content"
                android:layout_width="40dp"
                android:backgroundTint="@android:color/holo_red_dark"
                android:textIsSelectable="false"
                android:textOn=""
                android:textOff=""
                android:textAllCaps="false"
                android:tag="#ffcc0000"
                android:id="@+id/redButton" />

            <ToggleButton
                android:layout_height="wrap_content"
                android:id="@+id/blueButton"
                android:layout_width="40dp"
                android:textOn=""
                android:textOff=""
                android:tag="#ff0099cc"
                android:backgroundTint="@android:color/holo_blue_dark" />

            <ToggleButton
                android:layout_height="wrap_content"
                android:id="@+id/greenButton"
                android:layout_width="40dp"
                android:textOn=""
                android:textOff=""
                android:tag="#ff669900"
                android:backgroundTint="@android:color/holo_green_dark" />

            <ToggleButton
                android:layout_height="wrap_content"
                android:id="@+id/orangeButton"
                android:tag="#ffff8800"
                android:layout_width="40dp"
                android:textOn=""
                android:textOff=""
                android:backgroundTint="@android:color/holo_orange_dark" />

            <ToggleButton
                android:layout_height="wrap_content"
                android:id="@+id/purpleButton"
                android:layout_width="40dp"
                android:textOn=""
                android:textOff=""
                android:tag="#ffaa66cc"
                android:backgroundTint="@android:color/holo_purple" />

            <ToggleButton
                android:layout_height="wrap_content"
                android:id="@+id/blackButton"
                android:layout_width="40dp"
                android:textOn=""
                android:textOff=""
                android:tag="#ff000000"
                android:backgroundTint="@android:color/black" />

            <Button
                android:layout_height="wrap_content"
                android:id="@+id/undoButton"
                android:layout_width="45dp" />
        </GridLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center">

            <Button
                android:text="Button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/button"
                android:allowUndo="false"
                android:layout_gravity="center" />
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
